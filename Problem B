#include <bits/stdc++.h>
using namespace std;
 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
 
    int t;
    cin >> t; 
    while (t--) {
        int n;
        cin >> n; 
        vector<vector<int>> a(n, vector<int>(n));
 
       
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {
                cin >> a[i][j];
            }
        }
 
        int count = 0; 
 
  
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {
              
                if (a[i][j] < 0) {
                  
                    int tang = abs(a[i][j]);
                    count += tang; 
 
                   
                    for (int k = 0; k + i < n && k + j < n; k++) {
                        a[i + k][j + k] += tang; 
                    }
                }
            }
        }
 
        cout << count << '\n';
    }
 
    return 0;
}
